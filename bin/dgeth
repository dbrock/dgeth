#!/bin/sh
: ${datadir:=$HOME/.ethereum}
exec docker run \
--name=${name-geth} \
${lifecycle---rm} \
${interactive--it} \
${network---net=host} \
-u `id -u`:`id -g` -e HOME \
-v /etc/passwd:/etc/passwd:ro \
-v /etc/group:/etc/group:ro \
-v "$datadir:$datadir" \
$volumes \
ethereum/client-go \
--datadir="$datadir" \
"$@"
